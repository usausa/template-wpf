<mah:MetroWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:si="clr-namespace:Smart.Windows.Interactivity;assembly=Smart.Windows.Behaviors"
                 xmlns:sr="clr-namespace:Smart.Windows.Resolver;assembly=Smart.Windows"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:views="clr-namespace:Template.WindowsApp.Views"
                 mc:Ignorable="d"
                 x:Class="Template.WindowsApp.Views.MainWindow"
                 Title="MainWindow"
                 sr:DataContextResolver.Type="{x:Type views:MainWindowViewModel}"
                 Width="1024"
                 Height="768"
                 GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
                 Icon="../App.ico"
                 ResizeMode="CanResizeWithGrip"
                 ShowIconOnTitleBar="True"
                 WindowTransitionsEnabled="False"
                 d:DataContext="{d:DesignInstance Type={x:Type views:MainWindowViewModel}}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <si:CancelEventAction Cancel="{Binding Executing.Value}" />
            <i:CallMethodAction IsEnabled="{Binding Executing.Value, Converter={StaticResource ReverseConverter}}"
                                MethodName="Save"
                                TargetObject="{Binding WindowManager}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <si:DataContextDisposeAction />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Width="64"
                    Command="{Binding ExecuteCommand}"
                    Content="Execute" />
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid>

        <mah:MetroProgressBar Height="10"
                              Margin="0"
                              VerticalAlignment="Bottom"
                              IsIndeterminate="True"
                              Visibility="{Binding Executing.Value, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Grid>

</mah:MetroWindow>
